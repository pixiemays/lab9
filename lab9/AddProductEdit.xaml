<Window x:Class="lab9.AddProductEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:lab9"
        mc:Ignorable="d"
        Title="AddProduct" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" Margin="10, 0">
                    <TextBlock Margin="7">Артикль</TextBlock>
                    <TextBlock Margin="7">Наименование</TextBlock>
                    <TextBlock Margin="7">Описание</TextBlock>
                    <TextBlock Margin="7">Производитель</TextBlock>
                    <TextBlock Margin="7">Категория</TextBlock>
                    <TextBlock Margin="7">Цена</TextBlock>
                    <TextBlock Margin="7">Наличие на складе</TextBlock>
                    <TextBlock Margin="7">ProductStatus</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="120">
                    <TextBox Margin="5" Name="PArticle"/>
                    <TextBox Margin="5" Name="PName" />
                    <TextBox Margin="5" Name="PDesc" />
                    <TextBox Margin="5" Name="PProd" />
                    <TextBox Margin="5" Name="PCat" />
                    <TextBox Margin="5" Name="PPrice" />
                    <TextBox Margin="5" Name="PMeasure" />
                    <TextBox Margin="5" Name="PStatus" />
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <Button Height="23" Width="125" Margin="10" Click="AddButton">Сохранить/Добавить</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
